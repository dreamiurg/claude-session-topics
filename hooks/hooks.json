{
  "description": "Topic generation hooks for Claude Code sessions",
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "cat | node ${CLAUDE_PLUGIN_ROOT}/dist/cli.js"
          }
        ]
      }
    ],
    "PostWrite": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "cd ${CLAUDE_PLUGIN_ROOT} && npx biome format --write \"${FILE_PATH}\""
          }
        ]
      }
    ],
    "PostEdit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "cd ${CLAUDE_PLUGIN_ROOT} && npx biome format --write \"${FILE_PATH}\""
          }
        ]
      }
    ]
  }
}
