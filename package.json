{
  "name": "claude-session-topics",
  "version": "2.0.0",
  "description": "Know what each session is about. Displays topics like '# OAuth debug: fixing schema' in your status line",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git@github.com:dreamiurg/claude-session-topics.git"
  },
  "keywords": [
    "claude-code",
    "session-management",
    "topic-generation",
    "productivity",
    "ai-assistant"
  ],
  "author": "dreamiurg",
  "license": "MIT",
  "bin": {
    "claude-topic-generator": "./dist/cli.js",
    "claude-topic-display": "./dist/cli-display.js",
    "claude-topic-force": "./dist/cli-force-topic.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ci": "vitest --run",
    "lint": "tsc --noEmit",
    "lint:biome": "biome lint .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check --write .",
    "check:ci": "biome check .",
    "typecheck": "tsc --noEmit --strict",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "better-sqlite3": "^11.7.0",
    "zx": "^8.2.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
